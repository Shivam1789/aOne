<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.school.kotlin.utils.views.RobotoRegularTextView
        android:id="@+id/txt_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/choose"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.school.kotlin.utils.views.RobotoBoldTextView
        android:id="@+id/txt_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_course"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_access" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_rv_classes"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_eng"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>