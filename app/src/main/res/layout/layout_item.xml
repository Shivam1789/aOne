<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_80sdp"
    app:cardCornerRadius="14dp"
    android:layout_margin="8dp"
    >
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_sides_rounded">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_subject"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/chuck_ic_notification_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.school.kotlin.utils.views.RobotoBoldTextView
        android:id="@+id/txt_subject_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Subject name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_subject"
        app:layout_constraintStart_toEndOf="@id/img_subject"
        app:layout_constraintTop_toTopOf="@id/img_subject" />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>